# BICI AI Voice Agent - Production Environment Configuration
# This file contains production-specific settings

# ==============================================
# CORE APPLICATION SETTINGS
# ==============================================

NODE_ENV=production
PORT=${PORT}
DASHBOARD_WS_PORT=8080

# Organization Settings
DEFAULT_ORGANIZATION_ID=bici-bike-store
DEFAULT_TIMEZONE=America/Toronto

# Logging (Production)
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/bici-ai.log

# ==============================================
# SECURITY (Production Hardened)
# ==============================================

# Strong Security Settings
FORCE_HTTPS=true
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=${CORS_ORIGIN}

# Rate Limiting (Stricter for Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Session Security
SESSION_TIMEOUT=3600000
MAX_CONCURRENT_CONVERSATIONS=100

# ==============================================
# PERFORMANCE OPTIMIZATIONS
# ==============================================

# Database Connection Pool
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=30000

# Cache Settings
REDIS_TTL=7200
REDIS_MAX_RETRIES=5

# API Timeouts (Optimized for Production)
ELEVENLABS_TIMEOUT=30000
TWILIO_TIMEOUT=15000
HUBSPOT_TIMEOUT=20000
SHOPIFY_TIMEOUT=15000
GOOGLE_TIMEOUT=20000
SUPABASE_TIMEOUT=15000

# ==============================================
# WORKER & BACKGROUND JOBS
# ==============================================

WORKER_CONCURRENCY=10
QUEUE_NAME=bici-ai-jobs-prod
JOB_TIMEOUT=600000

# Maintenance
LOG_RETENTION_DAYS=90
BACKUP_RETENTION_DAYS=365
CLEANUP_INTERVAL_HOURS=6

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Enhanced Monitoring for Production
ERROR_REPORTING_ENABLED=true
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365
ENABLE_PERFORMANCE_METRICS=true
METRICS_COLLECTION_INTERVAL=30000

# Health Checks
HEALTH_CHECK_TIMEOUT=10000
EXTERNAL_SERVICE_TIMEOUT=15000

# ==============================================
# FEATURE FLAGS (Production)
# ==============================================

# Production Features
ENABLE_CONVERSATION_RECORDING=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_MULTILINGUAL_SUPPORT=true
ENABLE_APPOINTMENT_BOOKING=true
ENABLE_PRODUCT_RECOMMENDATIONS=true

# Experimental Features (Disabled in Production)
ENABLE_AI_INSIGHTS=false
ENABLE_VOICE_BIOMETRICS=false
ENABLE_PREDICTIVE_ROUTING=false

# ==============================================
# DEBUGGING (Minimal for Production)
# ==============================================

DEBUG=bici:error,bici:warn
ENABLE_DEBUG_LOGS=false
ENABLE_REQUEST_LOGGING=true

# Testing (Disabled in Production)
TEST_MODE=false
MOCK_EXTERNAL_SERVICES=false

# ==============================================
# SCALING CONFIGURATION
# ==============================================

MIN_INSTANCES=2
MAX_INSTANCES=10
AUTO_SCALING_ENABLED=true

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================

STORE_NAME=BICI Bike Store
STORE_PHONE=+14165552453
STORE_EMAIL=info@bicibikes.com
STORE_ADDRESS=123 Main Street, Toronto, ON M5V 3A8
STORE_HOURS_MON_FRI=09:00-19:00
STORE_HOURS_SAT_SUN=10:00-18:00
STORE_TIMEZONE=America/Toronto

EMERGENCY_CONTACT=+14165555555
AFTER_HOURS_MESSAGE=We are currently closed. Please call back during business hours or leave a message.